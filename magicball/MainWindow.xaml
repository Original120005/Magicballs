<Window x:Class="magicball.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:magicball"
        mc:Ignorable="d"
        Title="Магический шар" Height="200" Width="300">
    <Grid Margin="10">
        <TextBox Name="QuestionTextBox" VerticalAlignment="Top"  />
        <TextBox Name="ResponseTextBox" Margin="0,40,0,40" IsReadOnly="True" />
        <Button Name="AskButton" Content="Спросить" VerticalAlignment="Bottom" Click="AskButton_Click" />
    </Grid>
</Window>
